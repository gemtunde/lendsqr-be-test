{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "types": ["node"],
    "noImplicitAny": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"]
}
